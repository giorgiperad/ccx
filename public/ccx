    <script>
        // Create floating particles
        function createParticles() {
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 15 + 's';
                particle.style.animationDuration = (10 + Math.random() * 10) + 's';
                document.body.appendChild(particle);
            }
        }
        createParticles();

        const quotes = [
            { text: "·Éë·Éê·Éñ·Éê·É†·Éñ·Éî ·Éí·É†·É´·Éî·Éö·Éò ·Éó·Éê·Éõ·Éê·É®·Éò ·Éõ·Éù·Éò·Éó·ÉÆ·Éù·Éï·É° ·Éõ·Éù·Éó·Éõ·Éò·Éú·Éî·Éë·Éê·É°, ·Éì·Éê ·Éê·É†·Éê ·Éî·Éõ·Éù·É™·Éò·Éî·Éë·É°." }
        ];

        let currentQuoteIndex = 0;

        function displayQuote() {
            const quote = quotes[currentQuoteIndex];
            document.getElementById('quoteText').textContent = quote.text;
        }

        function rotateQuote() {
            currentQuoteIndex = (currentQuoteIndex + 1) % quotes.length;
            displayQuote();
        }

        let memoryCache = { data: null, timestamp: null };
        const CACHE_EXPIRY = 5 * 60 * 1000;
        const FETCH_TIMEOUT = 10000;

        const tokens = [
            'bitcoin', 'ethereum', 'solana', 'cardano', 'ripple', 'polkadot',
            'chainlink', 'cosmos', 'stellar', 'celo', 'osmosis',
            'sophiaverse', 'nunet', 'hypercycle',
            'chia', 'kava', 'decentraland', 'alien-worlds', 'gamium',
            'zksync', 'starknet', 'arbitrum', 'optimism', 'linea', 'berachain',
            'dforce-token', 'band-protocol', 'notcoin', 'flare', 'songbird',
            'coin98', 'chainge', 'masa', 'foxy', 'paribus', 'katana-inu', 'plume', 'xai',
            'status', 'tether-gold'
        ];

        let cryptoData = [];
        let globalData = null;
        let fearGreedData = null;
        let sortColumn = 'change';
        let sortDirection = 'desc';

        function formatPrice(price) {
            if (price >= 1000) return `$${price.toLocaleString('en-US', { maximumFractionDigits: 0 })}`;
            if (price >= 1) return `$${price.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
            if (price >= 0.01) return `$${price.toFixed(4)}`;
            return `$${price.toFixed(6)}`;
        }

        async function fetchCryptoData() {
            const errorEl = document.getElementById('error');
            const loadingEl = document.getElementById('loading');
            errorEl.innerHTML = '';
            loadingEl.style.display = 'block';

            try {
                const idsParam = tokens.join(',');
                const [mainResponse, globalResponse, fgResponse] = await Promise.allSettled([
                    fetch(`https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&ids=${idsParam}&order=market_cap_desc&per_page=250&page=1&sparkline=false&price_change_percentage=24h`),
                    fetch('https://api.coingecko.com/api/v3/global'),
                    fetch('https://api.alternative.me/fng/')
                ]);

                if (mainResponse.status === 'fulfilled') {
                    cryptoData = await mainResponse.value.json();
                }

                if (globalResponse.status === 'fulfilled') {
                    const globalJson = await globalResponse.value.json();
                    globalData = globalJson.data;
                }

                if (fgResponse.status === 'fulfilled') {
                    const fgJson = await fgResponse.value.json();
                    fearGreedData = fgJson.data[0];
                }

                renderDashboard();
                document.getElementById('lastUpdate').textContent = `·Éë·Éù·Éö·Éù·É° ·Éí·Éê·Éú·Éê·ÉÆ·Éö·Éì·Éê: ${new Date().toLocaleTimeString()}`;
            } catch (error) {
                console.error('Error:', error);
                errorEl.innerHTML = `<div class="error">‚ö†Ô∏è ·É®·Éî·É™·Éì·Éù·Éõ·Éê ·Éõ·Éù·Éú·Éê·É™·Éî·Éõ·Éî·Éë·Éò·É° ·É©·Éê·É¢·Éï·Éò·É†·Éó·Éï·Éò·É°·Éê·É°</div>`;
            } finally {
                loadingEl.style.display = 'none';
            }
        }

        function renderDashboard() {
            let statsHTML = '';

            if (globalData) {
                statsHTML += `
                    <div class="stat-card">
                        <div class="stat-label">BTC ·Éì·Éù·Éõ·Éò·Éú·Éê·É™·Éò·Éê</div>
                        <div class="stat-value">${globalData.market_cap_percentage.btc.toFixed(1)}%</div>
                    </div>
                `;
            }

            if (fearGreedData) {
                statsHTML += `
                    <div class="stat-card">
                        <div class="stat-label">·É®·Éò·É®·Éò & ·É°·Éò·ÉÆ·Éê·É†·Éë·Éî</div>
                        <div class="stat-value">${fearGreedData.value}</div>
                    </div>
                `;
            }

            document.getElementById('marketStats').innerHTML = statsHTML;

            const sortedByChange = [...cryptoData].sort((a, b) => 
                (b.price_change_percentage_24h || 0) - (a.price_change_percentage_24h || 0)
            );
            const topGainer = sortedByChange[0];

            if (topGainer) {
                const changePercent = topGainer.price_change_percentage_24h || 0;
                const gaugeWidth = Math.min(Math.abs(changePercent) * 2, 100);
                
                document.getElementById('topGainer').innerHTML = `
                    <div class="featured-card gainer">
                        <div class="featured-label gainer">üèÜ TOP GAINER (24H)</div>
                        <div class="featured-content">
                            <img src="${topGainer.image}" alt="${topGainer.name}" class="featured-icon">
                            <div class="featured-info">
                                <h3>${topGainer.name}</h3>
                                <div class="price">${formatPrice(topGainer.current_price)}</div>
                            </div>
                        </div>
                        <div class="gauge">
                            <div class="gauge-bar">
                                <div class="gauge-fill" style="width: ${gaugeWidth}%"></div>
                            </div>
                            <div class="gauge-value">+${changePercent.toFixed(1)}%</div>
                        </div>
                    </div>
                `;
            }

            const goldToken = cryptoData.find(token => token.id === 'tether-gold');
            if (goldToken) {
                const changePercent = goldToken.price_change_percentage_24h || 0;
                const isNegative = changePercent < 0;
                const gaugeWidth = Math.min(Math.abs(changePercent) * 2, 100);
                const sign = isNegative ? '' : '+';
                const cardClass = isNegative ? 'featured-card gold negative' : 'featured-card gold';
                const labelClass = isNegative ? 'featured-label gold negative' : 'featured-label gold';

                document.getElementById('xautBlock').innerHTML = `
                    <div class="${cardClass}">
                        <div class="${labelClass}">ü™ô ·Éù·É•·É†·Éù (24H)</div>
                        <div class="featured-content">
                            <img src="${goldToken.image}" alt="Tether Gold" class="featured-icon">
                            <div class="featured-info">
                                <h3>${goldToken.name}</h3>
                                <div class="price">${formatPrice(goldToken.current_price)}</div>
                            </div>
                        </div>
                        <div class="gauge">
                            <div class="gauge-bar">
                                <div class="gauge-fill" style="width: ${gaugeWidth}%"></div>
                            </div>
                            <div class="gauge-value">${sign}${Math.abs(changePercent).toFixed(1)}%</div>
                        </div>
                    </div>
                `;
            }

            cryptoData.sort((a, b) => {
                let aVal, bVal;
                
                if (sortColumn === 'name') {
                    aVal = a.name.toLowerCase();
                    bVal = b.name.toLowerCase();
                } else if (sortColumn === 'price') {
                    aVal = a.current_price || 0;
                    bVal = b.current_price || 0;
                } else if (sortColumn === 'change') {
                    aVal = a.price_change_percentage_24h || 0;
                    bVal = b.price_change_percentage_24h || 0;
                }

                if (sortDirection === 'asc') {
                    return aVal > bVal ? 1 : aVal < bVal ? -1 : 0;
                } else {
                    return aVal < bVal ? 1 : aVal > bVal ? -1 : 0;
                }
            });

            renderTokenList();
        }

        function sortBy(column) {
            if (sortColumn === column) {
                sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
            } else {
                sortColumn = column;
                sortDirection = column === 'name' ? 'asc' : 'desc';
            }

            cryptoData.sort((a, b) => {
                let aVal, bVal;
                
                if (column === 'name') {
                    aVal = a.name.toLowerCase();
                    bVal = b.name.toLowerCase();
                } else if (column === 'price') {
                    aVal = a.current_price || 0;
                    bVal = b.current_price || 0;
                } else if (column === 'change') {
                    aVal = a.price_change_percentage_24h || 0;
                    bVal = b.price_change_percentage_24h || 0;
                }

                if (sortDirection === 'asc') {
                    return aVal > bVal ? 1 : aVal < bVal ? -1 : 0;
                } else {
                    return aVal < bVal ? 1 : aVal > bVal ? -1 : 0;
                }
            });

            renderTokenList();
        }

        function renderTokenList() {
            const sortNameEl = document.getElementById('sortName');
            const sortPriceEl = document.getElementById('sortPrice');
            const sortChangeEl = document.getElementById('sortChange');
            
            if (sortNameEl) sortNameEl.className = 'sort-arrow';
            if (sortPriceEl) sortPriceEl.className = 'sort-arrow';
            if (sortChangeEl) sortChangeEl.className = 'sort-arrow';
            
            const activeArrow = document.getElementById('sort' + sortColumn.charAt(0).toUpperCase() + sortColumn.slice(1));
            if (activeArrow) {
                activeArrow.className = 'sort-arrow active';
                activeArrow.textContent = sortDirection === 'asc' ? '‚ñ≤' : '‚ñº';
            }

            const tokenHTML = cryptoData.map(token => {
                const change = token.price_change_percentage_24h || 0;
                const changeClass = change >= 0 ? 'positive' : 'negative';
                const changeSymbol = change >= 0 ? '‚ñ≤' : '‚ñº';
                
                return `
                    <div class="token-card">
                        <img src="${token.image}" alt="${token.name}" class="token-icon">
                        <div class="token-info">
                            <h3>${token.name}</h3>
                            <div class="symbol">${token.symbol}</div>
                        </div>
                        <div class="token-price">${formatPrice(token.current_price)}</div>
                        <div style="text-align: right">
                            <div class="token-change ${changeClass}">
                                ${changeSymbol} ${Math.abs(change).toFixed(2)}%
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            document.getElementById('tokenGrid').innerHTML = tokenHTML;
        }

        displayQuote();
        fetchCryptoData();
        setInterval(() => fetchCryptoData(), 90000);
    </script>
</body>
</html>
